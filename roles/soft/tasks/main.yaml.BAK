---
- name: Install go
  apt:
    name: golang-go
    state: present
  tags: 
  - ingo
  - never

- name: Remove go
  apt:
    name: golang-go
    state: absent
  tags: 
  - ungo
  - never

- name: install Docker dependencies
  apt:
    name: "{{item}}"
    state: present
    update_cache: yes
  loop:
     - apt-transport-https
     - ca-certificates
     - curl
     - gnupg-agent
     - software-properties-common
  tags:
  - indocker
  - never

- name: Sign Docker  GPG
  apt_key:
        url: https://download.docker.com/linux/ubuntu/gpg
        state: present
  tags:
  - indocker
  - never

- name: Install Docker repository
  apt_repository:
     repo: deb https://download.docker.com/linux/ubuntu bionic stable
     state: present
  tags:
  - indocker
  - never

- name: Install Docker
  apt:
    name: "{{item}}"
    state: latest
    update_cache: yes
  loop:
     - docker-ce
     - docker-ce-cli
     - containerd.io
  tags:
  - indocker
  - never

- name: Make sure docker is started
  service:
     name: docker
     state: started
     enabled: yes
  tags:
  - indocker
  - never

- name: Install git
  apt:
    name: git-all
    state: present
  tags:
  - ingit
  - never

- name: Remove git
  apt:
    name: git-allo
    state: absent
  tags:
  - ungit
  - never

- name: Remove Docker
  apt:
    name: "{{item}}"
    state: absent
    update_cache: yes
  loop:
     - docker-ce
     - docker-ce-cli
     - containerd.io
  tags:
  - undocker
  - never

- name: Install Docker compose
  apt:
    name: docker-compose
    state: present
  tags:
  - indockercompose
  - never

- name: Remove Docker compose
  apt:
    name: docker-compose
    state: absent
  tags:
  - undockercompose
  - never

- name: Create portainer container
  docker_container:
    name: portainer
    image: portainer/portainer-ce
    state: started
    recreate: yes
    restart_policy: always
    published_ports:
      - "8000:8000"
      - "9000:9000"
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - portainer_data:/data
  tags:
  - inportainer
  - never
